<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/btn_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="开始订阅" />

    <Button
        android:id="@+id/btn_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="停止订阅" />

    <Button
        android:id="@+id/btn_oncreate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="onCreate()" />

    <Button
        android:id="@+id/btn_onstart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="onStart()" />

    <Button
        android:id="@+id/btn_onresume"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="onResume()" />

    <Button
        android:id="@+id/btn_onpause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="onPause()" />

    <Button
        android:id="@+id/btn_onstop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="onStop()" />

    <Button
        android:id="@+id/btn_ondestory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="onDestory()" />

</LinearLayout>
